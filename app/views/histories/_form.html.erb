<%= form_for(history) do |f| %>
  <% if history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:</h2>

      <ul>
      <% history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('kid') %>
    <%= f.text_field :kid_id, { class: "form-control" } %>
  </div>

  <div class="field">
    <%= f.label t('product') %>
    <%= f.text_field :product_id, { class: "form-control" } %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to t('back'), histories_path, class: 'btn btn-default' %>
  </div>
<% end %>
