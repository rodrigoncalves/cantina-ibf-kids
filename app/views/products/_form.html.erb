<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('name') %>
    <%= f.text_field :name, { class: "form-control" } %>
  </div>

  <div class="field">
    <%= f.label t('price') %>
    <%= f.text_field :price, { class: "form-control", data: { autonumeric: { aSign: 'R$ ', aSep: '.', aDec: ',', mDec: 2, vMax: "999.99", vMin: "0.00" }}} %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to t('back'), kids_path, class: 'btn btn-default' %>
  </div>
<% end %>
