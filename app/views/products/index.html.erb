<p id="notice"><%= notice %></p>

<div class="page-header row">
  <div class="col-sm-6">
    <h1><%= t('products') %></h1>
  </div>
  <div class="col-sm-6 text-right h2">
    <%= link_to fa_icon('plus') + ' ' + t('new'), new_product_path, class: 'btn btn-primary', title: t('new'), style: 'color:white' %>
    <%= link_to fa_icon('refresh black') + ' ' + t('refresh'), products_path, class: 'btn btn-default', title: t('refresh'), style: 'color:black' %>
  </div>
</div>

<div class="row">
  <table class="table table-hover table-bordered highlight responsive-table">
    <thead>
      <tr class="active">
        <th>#</th>
        <th><%= t('name') %></th>
        <th><%= t('price') %></th>
        <th colspan="2"><%= t('actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% num=0 %>
      <% @products.each do |product| %>
        <tr>
          <td><%= num += 1 %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency_br(product.price) %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_product_path(product), class: 'btn btn-primary btn-xs btn-fixed-width', title: t('edit') %></td>
          <td><%= link_to fa_icon('trash-o'), product, method: :delete, class: 'btn btn-danger btn-xs btn-fixed-width', title: t('destroy'), data: { confirm: t('destroy_confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
