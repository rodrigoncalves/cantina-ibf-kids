<p id="notice"><%= notice %></p>

<h1><%= t('teams') %></h1>

<%= link_to t('team_new'), new_team_path %>
<br>
<br>

<table class="table table-hover table-bordered highlight responsive-table">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('name') %></th>
      <th colspan="3"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% num=0 %>
    <% @teams.each do |team| %>
      <tr>
        <td><%= num += 1 %></td>
        <td><%= team.name %></td>
        <td><%= link_to 'Ver', team %></td>
        <td><%= link_to 'Editar', edit_team_path(team) %></td>
        <td><%= link_to 'Remover', team, method: :delete, data: { confirm: t('destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
